<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/bt0"
        android:layout_alignTop="@+id/btMas"
        android:layout_marginStart="6dp"
        android:padding="24dp"
        android:text="@string/uno"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt1"
        android:layout_alignBottom="@id/bt1"
        android:layout_toStartOf="@id/bt3"
        android:layout_toEndOf="@id/bt1"
        android:padding="24dp"
        android:text="@string/dos"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btMas"
        android:layout_alignBottom="@id/bt1"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@id/btMas"
        android:padding="24dp"
        android:text="@string/tres"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/bt1"
        android:layout_alignTop="@id/bt5"
        android:layout_alignEnd="@id/bt1"
        android:layout_alignBottom="@id/bt5"
        android:layout_toStartOf="@id/bt5"
        android:padding="24dp"
        android:text="@string/cuatro"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt8"
        android:layout_below="@id/bt2"
        android:layout_alignStart="@id/bt2"
        android:layout_alignEnd="@id/bt2"
        android:padding="24dp"
        android:text="@string/cinco"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/bt3"
        android:layout_alignTop="@id/bt5"
        android:layout_alignEnd="@id/bt3"
        android:layout_alignBottom="@id/bt5"
        android:layout_toEndOf="@id/bt5"
        android:padding="24dp"
        android:text="@string/seis"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/bt1"
        android:layout_alignTop="@id/bt8"
        android:layout_alignEnd="@id/bt1"
        android:layout_alignBottom="@id/bt8"
        android:layout_toStartOf="@id/bt8"
        android:padding="24dp"
        android:text="@string/siete"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt0"
        android:layout_alignStart="@+id/bt2"
        android:layout_alignEnd="@+id/bt2"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:padding="24dp"
        android:text="@string/ocho"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/bt3"
        android:layout_alignTop="@id/bt8"
        android:layout_alignEnd="@id/bt3"
        android:layout_alignBottom="@id/bt8"
        android:layout_toEndOf="@id/bt8"
        android:padding="24dp"
        android:text="@string/nueve"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@id/btBorrar"
        android:padding="24dp"
        android:text="@string/cero"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btIgual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:padding="24dp"
        android:text="@string/igual"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btIgual"
        android:layout_alignStart="@id/btIgual"
        android:layout_alignEnd="@id/btIgual"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:padding="24dp"
        android:text="@string/sumar"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btBorrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btIgual"
        android:layout_alignStart="@id/btIgual"
        android:layout_alignEnd="@id/btIgual"
        android:layout_alignParentBottom="true"
        android:padding="24dp"
        android:text="@string/borrar"
        android:textSize="24sp" />

</RelativeLayout>